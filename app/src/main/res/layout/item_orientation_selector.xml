<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.button.MaterialButtonToggleGroup android:layout_width="wrap_content"
    android:id="@+id/buttonToggleOrientation"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:singleSelection="true"
    app:selectionRequired="true"
    android:layout_marginHorizontal="@dimen/keyline_horizontal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonAny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_devices"
        style="@style/Widget.Decorit.Button.OutlinedButton.IconOnly" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonPortrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_portrait"
        style="@style/Widget.Decorit.Button.OutlinedButton.IconOnly" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLandscape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_landscape"
        style="@style/Widget.Decorit.Button.OutlinedButton.IconOnly" />


</com.google.android.material.button.MaterialButtonToggleGroup>