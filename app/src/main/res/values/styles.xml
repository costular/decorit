<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Button.CallToAction" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="Widget.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconSize">26dp</item>
    </style>

    <style name="RoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Widget.Decorit.Photo.Action" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">mini</item>
        <item name="backgroundTint">@android:color/white</item>
    </style>

    <style name="Widget.Decorit.Button.IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">?colorOnBackground</item>
        <item name="rippleColor">?colorOnPrimary</item>
    </style>

    <style name="Widget.Decorit.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.Decorit.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.Decorit.Search" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">?attr/colorDivider</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">?android:attr/colorBackground</item>
    </style>

</resources>